doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Register
  // Favicon
  link(rel='apple-touch-icon' sizes='180x180' href='/assets/Favicon/apple-touch-icon.png')
  link(rel='icon' type='image/png' sizes='32x32' href='/assets/Favicon/favicon-32x32.png')
  link(rel='icon' type='image/png' sizes='16x16' href='/assets/Favicon/favicon-16x16.png')
  link(rel='manifest' href='/assets/Favicon/site.webmanifest')
  // Fonts + Bootstrap + Icons
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css')
  link(href='https://fonts.googleapis.com/css?family=Quicksand:400,600,700&display=swap' rel='stylesheet')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css' rel='stylesheet')
  style.
    body {
    font-family: "Quicksand", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
    font-weight: 600;
    background-image: url('/assets/images/chicks2.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    
    }
    .card {
    border-radius: 16px;
    border: none;
    background-color: #fff;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }
    .form-label {
    font-weight: 500;
    }
    .input-group {
    border-radius: 12px;
    overflow: hidden;
    }
    .input-group-text {
    background-color: #f9fafb;
    border-right: 0;
    }
    input:focus,
    select:focus,
    textarea:focus {
    border-color: #f5b041 !important;
    box-shadow: 0 0 0 0.2rem #f5d9ac !important;
    outline: none;
    }
    .form-control {
    background-color: #f9fafb;
    border-left: 0;
    }
    .input-group .form-control:focus {
    box-shadow: none;
    border-color: #4f46e5;
    }
    .invalid-feedback {
    font-size: 0.875rem;
    }
    .btn-primary {
    background-color: #e67e22;
    border-radius: 12px;
    border: none;
    font-weight: 600;
    }
    .btn-primary:hover {
    background-color: #d35400;
    }
    .btnlog {
    background-color: #e67e22;
    color: white;
    }
    .btnlog:hover {
    background-color: #d35400;
    color: white;
    }
.card.p-4.shadow-lg.mx-auto.mt-5(style='width: 100%; max-width: 500px;')
  .mb-3.text-center
    a(href='/')
      img(src='assets/images/logo/horizontal logo.png' alt='Young4ChickS Logo' height='50')
  h4.mb-3.text-center Add Chick Stock 
  form#chickRequestForm(action='/stock' method='post' novalidate='')
    
    // Number of Chicks
    .mb-3
      label.form-label(for='quantity') Number of Chicks
      .input-group
        span.input-group-text(style='color: orange;') 
          i.bi.bi-list-ol
        input#quantity.form-control(name='quantity' type='number' min='1' required='')
      .invalid-feedback Please enter a valid number of chicks.

    // Chick Type
    .mb-3
      label.form-label(for='chickType') Chick Type
      .input-group
        span.input-group-text(style='color: orange;') 
          i.bi.bi-tags
        select#chickType.form-select(name='chickType' required='')
          option(value='') Select Chick Type
          option(value='Broiler') Broiler
          option(value='Layer') Layer
      .invalid-feedback Please select a chick type.

    // Breed Preference
    .mb-3
      label.form-label(for='breed') Breed Preference
      .input-group
        span.input-group-text(style='color: orange;') 
          i.bi.bi-shield-plus
        select#breed.form-select(name='breed' required='')
          option(value='') Select breed
          option(value='Local') Local
          option(value='Exotic') Exotic
      .invalid-feedback Please select a preferred breed.

    // Stock Date
    .mb-3
      label.form-label(for='stockDate') Stocked on
      .input-group
        span.input-group-text(style='color: orange;') 
          i.bi.bi-calendar-event
        input#stockDate.form-control(type='date' name='stockDate' required='')
      .invalid-feedback Please choose a valid delivery date.

    // Age
    .mb-3
      label.form-label(for='age') Age in days
      .input-group
        span.input-group-text(style='color: orange;') 
          i.bi.bi-hourglass-split
        input#age.form-control(type='number' name='age' min='1' required='')
      .invalid-feedback Please provide a valid age.

    button.btn.btn-primary.w-100(type='submit') Submit Stock


//- Validation script
script.
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('chickRequestForm');
    form.addEventListener('submit', function(e) {
      if (!form.checkValidity()) {
        e.preventDefault();
        e.stopPropagation();
      }
      form.classList.add('was-validated');
    });
  });
