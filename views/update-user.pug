extends  layout 
block content 
    header 
    .card.p-4.shadow-sm.mx-auto.mt-5(style='width: 100%; max-width: 400px;')
      .mb-3.text-center
        a(href='index.html')
          img(src='/images/logo/horizontal logo.png' alt='' height='50')
      p.mb-3.text-center Update your information 
      form#registerForm(method='post' action='/updateuser?id='+user._id  novalidate='')
        .row.g-3.mb-3
          .col-sm-6
            label.form-label(for='fullname') Full Name
            input#fullName.form-control(type='text' name='fullname' required='' value= user.fullname)
            .invalid-feedback Full name is required.
          .col-sm-6
            label.form-label(for='age') Age
            input#age.form-control(type='number' name='age' min='20' max='30' required='' value= user.age)
            .invalid-feedback Age should be between 20 and 30 years.
          .col-12
            label.form-label(for='gender') Gender
            select#gender.form-select(name='gender' required='')
              option(value='male' selected=user.role==='male') Male
              option(value='female' selected=user.role==='female') Female
              option(value='other' selected=user.role==='other') Other
            .invalid-feedback Please select your gender.
        .row.mb-3
          .col
            label.form-label(for='nin') National ID Number
            input#nin.form-control(name='nin' type='text' required='' value= user.nin)
            .invalid-feedback NIN is required.
          .col
            label.form-label(for='phone') Phone Number
            input#phone.form-control(name='phone' type='tel' placeholder='07xxxxxxxx' pattern='07[0-9]{8}' required='' value= user.phone)
            .invalid-feedback Phone number is required.
            .mb-3
          label.form-label(for='location') District / Location
          input#location.form-control(name='location' type='text' required='' value= user.location)<!-- Carousel -->

          .invalid-feedback Location is required.
        .mb-3 
            label.form-label(for='role') Role 
            select#role.form-select(name='role' required='')
              option(value='') --Select your role--
              option(value='brooderManager' selected=user.role==='brooderManager') Brooder Manager
              option(value='farmer' selected=user.role==='farmer') Farmer
              option(value='salesRep' selected=user.role==='salesRep') Sales Rep 
            .invalid-feedback Please select your gender.  
        button.btn.w-100.btnlog(type='submit') Update 
